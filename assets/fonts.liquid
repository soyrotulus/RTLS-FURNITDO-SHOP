/* ===============================
   Uso global de las fuentes
   =============================== */
body {
  font-family: 'Texta', Arial, sans-serif;
  font-weight: normal;
  color: #222;
  line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'TarzanaWide', Georgia, serif;
  font-weight: bold;
  line-height: 1.2;
  margin: 0 0 0.5em;
}

p, li, span, a {
  font-family: 'Texta', Arial, sans-serif;
}

button,
.shopify-payment-button__button,
.btn,
.button {
  font-family: 'Texta', Arial, sans-serif;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
