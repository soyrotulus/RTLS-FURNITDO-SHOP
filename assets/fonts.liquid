/* TarzanaWide */
@font-face {
  font-family: 'TarzanaWide';
  src: url('{{ "TarzanaWide.woff2" | asset_url }}') format('woff2'),
       url('{{ "TarzanaWide.woff" | asset_url }}') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

